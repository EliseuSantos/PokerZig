{
    "compilerOptions": {
        "outDir": "./target/",
        "sourceMap": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es6",
        "strict": true,
        "noEmit": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react"
    },
    "include": ["./src/**/*", "commitlint.config.js"],
    "exclude": ["node_modules"]
}
